rule "panonske-zaslanjene-stepe-mjt-options"
no-loop
    when
        $n : NaturalFactorOptions(habitatType == Type.PZS, elevationOptions.size() == 0)
    then
        $n.addMjtOption(MJT.Medium.name());
        $n.addMjtOption(MJT.Hot.name());
        $n.addMjtOption(MJT.VeryHot.name());
end
